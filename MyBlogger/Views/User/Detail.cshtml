@model User
<div class="card">
    <div class="card-header">
        <h3>Detail User</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Username</th>
                <th>Nama</th>
                <th>Role</th>
                <th>Tanggal Lahir</th>
                <th>Foto</th>
            </tr>

            <tr>
                <td>@Model.Username</td>
                <td>@Model.Name</td>
                <td>@Model.Role</td>

                <td>
                    @Model.FormatTanggalLahir
                </td>
                <td>
                    <img src="~/upload/@Model.Foto" width="100" height="100" />
                </td>
            </tr>
        </table>
    </div>
</div>